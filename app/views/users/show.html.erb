<div class="flex">
  <%= render partial: 'templates/header' %>

  <main class="basis-9/12">
    <div class="flex flex-col border border-gray-200">
      <h2 class="text-2xl my-2 px-6 font-bold">
        <%= @profile_user.name %>
      </h2>
      <div class="px-6">
        <div class="h-32 bg-gray-200">
        </div>
        <div class="h-16 bg-gray-200">
          <div class="w-32 mx-4 rounded-full border-4 border-white">
            <%= image_tag 'default_user.png' %>
          </div>
        </div>
        <div class="h-16">
        </div>
        <div class="px-6">
          <h2 class="text-2xl mt-2 font-bold">
            <%= @profile_user.name %>
          </h2>
          <h3>
           @<%= @profile_user.id%>
          </h3>
        </div>
      </div>

      <div class="my-4 px-6">
        <div>
          <ul class="flex flex-row justify-around text-lg">
            <li class="border-b-2 border-b-twitter">
              ツイート
            </li>
            <li class="">
              ツイートと返信
            </li>
            <li class="">
              メディア
            </li>
            <li class="">
              いいね
            </li>
          </ul>
        </div>
      </div>

      <div class="my-4">
        <ul>
          <% @user_tweets.each do |tweet| %>
            <li class="list-none">
              <div class="flex px-6 border border-gray-200 py-4">
                <div class="flex mr-2">
                  <div class="w-12">
                    <%= image_tag 'default_user.png' %>
                  </div>
                </div>

                <div class="w-full">
                  <div class="flex justify-between flex-col">
                    <div class="flex justify-between">
                      <p class="">
                        <span class="font-bold text-lg">
                          <%= tweet.user.name%>
                        </span>
                        <span class="text-gray-700">
                          @ <%= tweet.user_id %>
                        </span>
                      </p>
                      <p>
                        <% if @profile_user.id == @user.id %>
                          <%= link_to '[delete]', tweets_path + "/#{tweet[:id]}",
                          data: { turbo_method: :delete, turbo_confirm: 'Delete Tweet?'} %>
                        <% end %>
                      </p>
                    </div>
                    <p class="mt-2">
                      <%= tweet.text %>
                    </p>
                  </div>
                </div>
              </div>

            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div>
    </div>
  </main>
</div>